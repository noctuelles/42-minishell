                       /* Minishell grammar */

<pipeline>			::=		<simple_command>
					  |		<pipeline>		'|'				<simple_command>

<simple_command>	::=		<cmd_prefix>	<word>			<cmd_suffix>
					  |		<cmd_prefix>	<word>
					  |		<cmd_prefix>
					  |		<word>			<cmd_suffix>
					  |		<word>

<cmd_prefix>		::=		<io_redirect>
					  |		<cmd_prefix>	<io_redirect>

<cmd_suffix>		::=		<io_redirect>
					  |		<cmd_suffix>	<io_redirect>
					  |		<word>
					  |		<cmd_suffix>	<word>

<io_redirect>		::=		'<'				<word>
					  |		'>'				<word>
					  |		'>>'			<word>
					  |		'<<'			<word>

/* For recursive descent parser (no minishell bonus) */

<pipeline>			::=		<simple_command>	'|'			<pipeline>
					  |		<simple_command>	'Îµ'

<simple_command>	::=		<cmd_prefix>	<word>			<cmd_suffix>
					  |		<cmd_prefix>	<word>
					  |		<cmd_prefix>
					  |		<word>			<cmd_suffix>
					  |		<word>

<cmd_prefix>		::=		<io_redirect>	<cmd_prefix>
					  |		<io_redirect>

<cmd_suffix>		::=		<io_redirect>	<cmd_suffix>
					  |		<io_redirect>
					  |		<word>			<cmd_suffix>
					  |		<word>

<io_redirect>		::=		'<'				<word>
					  |		'>'				<word>
					  |		'>>'			<word>
					  |		'<<'			<word>

/* For recursive descent parser (minishell bonuses) */

<andor>				::=		<pipeline>				'&&'				<andor>
							<pipeline>				'||'				<andor>
							<pipeline>

<pipeline>			::=		<command>				'|'					<pipeline>
					  |		<command>

<command>			::=		<simple_command>
							'('						<command>			')'				/* This is also called a subshell */

<simple_command>	::=		<cmd_prefix>			<word>				<cmd_suffix>
					  |		<cmd_prefix>			<word>
					  |		<cmd_prefix>
					  |		<word>					<cmd_suffix>
					  |		<word>

<cmd_prefix>		::=		<io_redirect>			<cmd_prefix>
					  |		<io_redirect>

<cmd_suffix>		::=		<io_redirect>			<cmd_suffix>
					  |		<io_redirect>
					  |		<word>					<cmd_suffix>
					  |		<word>

<io_redirect>		::=		'<'						<word>
					  |		'>'						<word>
					  |		'>>'					<word>
					  |		'<<'					<word>
